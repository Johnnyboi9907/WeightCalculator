<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" fx:id="scenePane" prefHeight="800.0" prefWidth="1000.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="weightcalculator.MainController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
   <children>
      <Label fx:id="weightLbl" layoutX="340.0" layoutY="676.0" text="Weight = 0kg">
         <font>
            <Font name="System Bold Italic" size="50.0" />
         </font>
      </Label>
      <Label layoutX="286.0" layoutY="99.0" text="Weight Calculator">
         <font>
            <Font name="System Bold Italic" size="50.0" />
         </font>
      </Label>
      <Rectangle arcHeight="5.0" arcWidth="5.0" height="47.0" layoutX="318.0" layoutY="563.0" stroke="BLACK" strokeType="INSIDE" width="375.0" />
      <MenuBar fx:id="menuBar" layoutY="2.0" prefHeight="25.0" prefWidth="1000.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="runBtn" mnemonicParsing="false" onAction="#handleRun" text="Run" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="closeBtn" mnemonicParsing="false" onAction="#closeProgram" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Menu">
            <items>
                  <MenuItem fx:id="undoBtn" mnemonicParsing="false" text="Undo" />
                  <MenuItem fx:id="clearBtn" mnemonicParsing="false" text="Clear Scale" />
                  <MenuItem fx:id="resetBtn" mnemonicParsing="false" text="Reset Program" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Select">
              <items>
                  <MenuItem fx:id="objectBtn" mnemonicParsing="false" onAction="#openObjectMenu" text="Object Select" />
              <MenuItem fx:id="planetBtn" mnemonicParsing="false" onAction="#openPlanetMenu" text="Planet Select" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
      <ImageView fx:id="imgView" fitHeight="300.0" fitWidth="300.0" layoutX="350.0" layoutY="263.0" pickOnBounds="true" preserveRatio="true" />
   </children>
</AnchorPane>
